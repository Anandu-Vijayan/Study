<section>
  <div class="container">
    <table class="table">
      
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Discription</th>
          <th scope="col">Price</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
          {{#each product}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.Name}}</td>
          <td>{{this.Discription}}</td>
          <td>Rs:{{this.Price}}/-</td>
          <td><img style="width: 50px;height:50px"  src="{{this.Image}}" alt=""></td>
        </tr>
        {{/each}}
        
      </tbody>
    </table>
  </div>
</section>